{
      "version": "0.2.0",
      "configurations": [
            {
                  "type": "chrome",
                  "request": "attach",
                  "name": "Attach to Chrome",
                  "port": 9222,
                  "webRoot": "${workspaceFolder}"
            },
            {
                  "name": "Debug",
                  "type": "chrome",
                  "request": "launch",
                  "webRoot": "${workspaceRoot}",
                  "url": "http://localhost:8080/#/",
                  "userDataDir": "${workspaceRoot}/.vscode/chrome",
                  "sourceMaps": true,
                  // "preLaunchTask": "development",
                  "smartStep": true,
                  "internalConsoleOptions": "openOnSessionStart",
                  "skipFiles": [
                        "node_modules/**"
                  ],
                  "sourceMapPathOverrides": {
                        "webpack:///*": "${webRoot}/*"
                  }
            },
                    {
                     "name": "Launch localhost",
                     "firefoxExecutable": "/home/ash/.local/share/umake/web/firefox-dev/firefox",
                     "type": "firefox",
                     "request": "launch",
                     "reAttach": true,
                     "url": "http://localhost:8080/#/",
                     "pathMappings": [
                      {
                       "url": "http://localhost",
                       "path": "${workspaceFolder}"
                      }
                     ]
                    }
      ]
}
